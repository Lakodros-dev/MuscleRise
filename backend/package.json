{
    "$schema": "https://json.schemastore.org/package.json",
    "name": "muscle-rise-backend",
    "private": true,
    "type": "module",
    "version": "1.2.0",
    "scripts": {
        "dev": "tsx watch src/server.ts",
        "build": "tsc",
        "build:render": "npm ci && npx tsc --skipLibCheck",
        "start": "node dist/server.js",
        "test": "vitest --run",
        "typecheck": "tsc --noEmit",
        "migrate": "tsx src/scripts/migrate-to-mongodb.ts",
        "test:mongodb": "tsx src/scripts/test-mongodb.ts",
        "test:connection": "tsx src/scripts/test-mongodb-connection.ts"
    },
    "dependencies": {
        "bcrypt": "^6.0.0",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dotenv": "^17.2.3",
        "express": "^5.1.0",
        "jsonwebtoken": "^9.0.2",
        "mongodb": "^6.12.0",
        "zod": "^3.25.76"
    },
    "devDependencies": {
        "@types/bcrypt": "^6.0.0",
        "@types/cookie-parser": "^1.4.9",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.3",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^24.2.1",
        "tsx": "^4.20.3",
        "typescript": "^5.9.2",
        "vitest": "^3.2.4"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    }
}